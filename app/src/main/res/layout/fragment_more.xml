<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.more.MoreFragment">

    <LinearLayout
        android:id="@+id/about_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/round_shape"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvVersionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ovid" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="visible" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_developer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/DefaultFontTheme"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:autoLink="email"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_mail_black_24dp"
                    android:gravity="center_vertical"
                    android:text="Contact: fsappz78@gmail.com" />

                <TextView
                    android:id="@+id/tv_ide"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_android_studio"
                    android:gravity="center_vertical"
                    android:text="Written in pure Java with Android Studio" />

                <TextView
                    android:id="@+id/tv_source_code"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_github"
                    android:gravity="center_vertical"
                    android:text="View source code on Github" />

                <TextView
                    android:id="@+id/tv_font_used"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_font_download_black_24dp"
                    android:gravity="center_vertical"
                    android:text="Third-Party-Font used: &quot;Cinzel-Decorative&quot;: Copyright (c) 2012 Natanael Gama (info@ndiscovered.com), with Reserved Font Name 'Cinzel'\nTap for further details" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_copyright_holders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:forceDarkAllowed="false"
                android:orientation="vertical"
                android:theme="@style/DefaultFontTheme">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pictures: Copyright holders"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:autoLink="web"
                    android:text="Busto_Emilio_Macro\nBy Mikceo - Own work, CC BY-SA 4.0, https://commons.wikimedia.org/w/index.php?curid=75568916"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:autoLink="web"
                    android:text="Properce\nBy Unknown author - https://fineartamerica.com/featured/propertius-roman-elegiac-poet-and-mary-evans-picture-library.html, Public Domain\nhttps://commons.wikimedia.org/w/index.php?curid=82364722"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:autoLink="web"
                    android:text="Horace\nBy Cristian Quezada ValdÃ©s - Flickr: Bellas Artes, CC BY 2.0, https://commons.wikimedia.org/w/index.php?curid=26946042"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>